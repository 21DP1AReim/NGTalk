<%= stylesheet_link_tag 'registerStyle' %>
<body>
<div class="signup-page">
    <div class = "signup-box">
        <h1>Sign up</h1>
        <div class="signup-container">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "signup-form-container") do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    <div class="signup-form">
      <%= f.text_field :userName, placeholder: "Username", class:" signup-form-input" %>
    </div>

  <div class="signup-form">
    <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email", class:" signup-form-input" %>
  </div>

  <div class="signup-form">
    <%= f.password_field :password, autocomplete: "new-password", class:" signup-form-input", placeholder: "Pasword" %>
  </div>

  <div class="signup-form">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:" signup-form-input", placeholder:"Password confirmation" %>
  </div>

    <%= f.submit "Sign up", class:"signup-btn signup-submit-btn" %>
  </div>
<% end %>
</div>



